<fieldset>
  <legend>Update Profile</legend>
  <form class="form" onsubmit={{action (route-action "update" session model)}}>
    <div class="form-group">
      <label for="js-given-name">Given Name</label>
      {{input-text
        aria-describedby="js-given-name-help"
        autofocus=true
        class="form-control"
        id="js-given-name"
        placeholder="Given Name"
        type="text"
        value=model.given_name
      }}
      <small id="js-given-name-help" class="form-text text-muted">
        <strong>Required</strong> What is your given/first name?
      </small>
    </div>
    <div class="form-group">
      <label for="js-middle-name">Middle Name</label>
      {{input-text
        aria-describedby="js-middle-name-help"
        class="form-control"
        id="js-middle-name"
        placeholder="Middle Name"
        type="text"
        value=model.middle_name
      }}
      <small id="js-middle-name-help" class="form-text text-muted">
        What is your middle name?
      </small>
    </div>
    <div class="form-group">
      <label for="js-family-name">Family Name</label>
      {{input-text
        aria-describedby="js-family-name-help"
        class="form-control"
        id="js-family-name"
        placeholder="Family Name"
        type="text"
        value=model.family_name
      }}
      <small id="js-family-name-help" class="form-text text-muted">
        <strong>Required</strong> What is your family/last name?
      </small>
    </div>
    <div class="form-group">
      <label for="js-display-name">Display Name</label>
      {{input-text
        aria-describedby="js-display-name-help"
        class="form-control"
        id="js-display-name"
        placeholder="Display Name"
        type="text"
        value=model.name
      }}
      <small id="js-display-name-help" class="form-text text-muted">
        Do you want to specify a display name that is slightly different than your legal name?
      </small>
    </div>
    <div class="form-group">
      <label for="js-nickname">Nickname</label>
      {{input-text
        aria-describedby="js-nickname-help"
        class="form-control"
        id="js-nickname"
        placeholder="Nickname"
        type="text"
        value=model.nickname
      }}
      <small id="js-nickname-help" class="form-text text-muted">
        What is your nickname?
      </small>
    </div>
    <div class="form-group text-right">
      <button class="btn btn-outline-primary" type="submit">
        Update
      </button>
    </div>
  </form>
</fieldset>
