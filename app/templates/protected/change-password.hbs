<section class="my-3">
  <div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <fieldset>
          <legend>Change My Password</legend>
          <form class="form" onsubmit={{action
            (route-action "changePassword" model.currentPassword model.newPassword)}}>
            <div class="form-group">
              <label for="js-current-password" class="control-label">Current Password</label>
              {{input
                aria-describedby="js-current-password-help"
                autocomplete="current-password"
                autofocus=true
                class="form-control"
                id="js-current-password"
                placeholder="Current Password"
                type="password"
                value=model.currentPassword
              }}
              <small id="js-current-password-help" class="form-text text-muted">What is your current password?</small>
            </div>
            <div class="form-group">
              <label for="js-new-password" class="control-label">New Password</label>
              {{input
                aria-describedby="js-new-password-help"
                class="form-control"
                id="js-new-password"
                placeholder="New Password"
                type="password"
                value=model.newPassword
              }}
              <small id="js-new-password-help" class="form-text text-muted">What is your new password?</small>
            </div>
            <div class="form-group text-right">
              <button class="btn btn-outline-primary" type="submit">
                Change Password
              </button>
            </div>
          </form>
        </fieldset>
      </div>
    </div>
  </div>
</section>