<section class="my-3">
  <div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <form class="form" onsubmit={{action "login" session model.username model.password}}>
          <div class="form-group">
            <label for="js-username" class="control-label">Email Address</label>
            {{input
              aria-describedby="js-username-help"
              autocomplete="email"
              autofocus=true
              class="form-control"
              id="js-username"
              placeholder="Email Adddress"
              type="email"
              value=model.username
            }}
            <small id="js-username-help" class="form-text text-muted">Your email.</small>
          </div>
          <div class="form-group">
            <label for="js-password" class="control-label">Password</label>
            {{input
              aria-describedby="js-password-help"
              autocomplete="current-password"
              class="form-control"
              placeholder="Password"
              type="password"
              value=model.password
            }}
            <small id="js-password-help" class="form-text text-muted">Your password.</small>
          </div>
          <div class="form-group text-right">
            <button class="btn btn-outline-primary" type="submit">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>