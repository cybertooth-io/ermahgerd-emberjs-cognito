<section class="my-3">
  <div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <fieldset>
          <legend>Set Password</legend>
          <form class="form" onsubmit={{action (route-action "setPassword" model.username model.code model.password)}}>
            <div class="form-group">
              <label for="js-username" class="control-label">Email Address</label>
              {{input
                aria-describedby="js-username-help"
                autocomplete="email"
                autofocus=true
                class="form-control"
                id="js-username"
                placeholder="Email Adddress"
                type="email"
                value=model.username
              }}
              <small id="js-username-help" class="form-text text-muted">
                What email address have you registered with?
              </small>
            </div>
            <div class="form-group">
              <label for="js-code" class="control-label">Code</label>
              {{input
                aria-describedby="js-code-help"
                class="form-control"
                id="js-code"
                placeholder="Numeric Code"
                type="number"
                value=model.code
              }}
              <small id="js-code-help" class="form-text text-muted">
                What was the numeric code that was emailed to you?
              </small>
            </div>
            <div class="form-group">
              <label for="js-password" class="control-label">New Password</label>
              {{input
                aria-describedby="js-password-help"
                class="form-control"
                id="js-password"
                placeholder="New Password"
                type="password"
                value=model.password
              }}
              <small id="js-password-help" class="form-text text-muted">
                What is your new password?
              </small>
            </div>
            <div class="form-group text-right">
              <button class="btn btn-outline-primary" type="submit">
                Set My Password
              </button>
            </div>
          </form>
        </fieldset>
      </div>
    </div>
  </div>
</section>