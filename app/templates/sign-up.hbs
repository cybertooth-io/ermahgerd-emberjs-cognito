<section class="my-3">
  <div class="container">
    <fieldset>
      <legend>Sign Up</legend>
      <form
        class="form"
        onsubmit={{action "signUp" model.username model.password model.passwordConfirmation model.givenName
                          model.familyName}}>
        <div class="form-group">
          <label for="js-given-name">Given Name</label>
          {{input
            aria-describedby="js-given-name-help"
            autocomplete="email"
            autofocus=true
            class="form-control"
            type="text"
            value=model.givenName
          }}
          <small id="js-given-name-help" class="form-text text-muted">Your given name.</small>
        </div>
        <div class="form-group">
          <label for="js-family-name">Family Name</label>
          {{input
            aria-describedby="js-family-name-help"
            autocomplete="email"
            class="form-control"
            type="text"
            value=model.familyName
          }}
          <small id="js-family-name-help" class="form-text text-muted">Your family name.</small>
        </div>
        <div class="form-group">
          <label for="js-username">Email Address</label>
          {{input
            aria-describedby="js-username-help"
            autocomplete="email"
            class="form-control"
            type="email"
            value=model.username
          }}
          <small id="js-username-help" class="form-text text-muted">Your email address.</small>
        </div>
        <div class="form-group">
          <label for="js-password">Password</label>
          {{input
            aria-describedby="js-password-help"
            autocomplete="new-password"
            class="form-control"
            type="password"
            value=model.password
          }}
          <small id="js-password-help" class="form-text text-muted">Your password.</small>
        </div>
        <div class="form-group">
          <label for="js-password-confirmation">Password Confirmation</label>
          {{input
            aria-describedby="js-password-confirmation-help"
            autocomplete="new-password"
            class="form-control"
            type="password"
            value=model.passwordConfirmation
          }}
          <small id="js-password-confirmation-help" class="form-text text-muted">Confirm your password.</small>
        </div>
        <div class="form-group text-center">
          <button class="btn btn-lg btn-outline-primary" type="submit">
            Sign Up
          </button>
        </div>
      </form>
    </fieldset>
  </div>
</section>
