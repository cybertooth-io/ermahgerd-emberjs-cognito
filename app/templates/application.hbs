<nav class="border-bottom navbar navbar-expand-md navbar-light bg-light">
  <div class="container">
    {{#if session.isAuthenticated}}
      {{#link-to "protected.index" class="navbar-brand"}}
        ermahgerd-emberjs-cognito
      {{/link-to}}
    {{else}}
      {{#link-to "index" class="navbar-brand"}}
        ermahgerd-emberjs-cognito
      {{/link-to}}
    {{/if}}

    {{!-- XS/SM Navbar Menu --------------------------------------------------------------------------------------- --}}

    <button
      aria-controls="js-navbar-toggler" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler"
      data-target="#js-navbar-toggler" data-toggle="collapse" type="button">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="js-navbar-toggler">
      <div class="d-md-none">
        <ul class="navbar-nav">
          {{#if session.isAuthenticated}}
            <li class="nav-item">
              {{#link-to "protected.index" class="nav-link"}}
                Home
              {{/link-to}}
            </li>
            <li class="nav-item">
              {{#link-to "protected.configuration.index" class="nav-link"}}
                Configuration
              {{/link-to}}
            </li>
            <div class="dropdown-divider"></div>
            <li class="nav-item">
              {{#link-to "protected.change-password" class="nav-link"}}
                Change Password
              {{/link-to}}
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#" onclick={{action "logout" session}}>
                Logout
              </a>
            </li>
          {{else}}
            <li class="nav-item">
              {{#link-to "sign-up" class="nav-link"}}
                Sign Up
              {{/link-to}}
            </li>
            <div class="dropdown-divider"></div>
            <li class="nav-item">
              {{#link-to "login" class="nav-link"}}
                Login
              {{/link-to}}
            </li>
          {{/if}}
        </ul>
      </div>
    </div>

    {{!-- MD/LG/XL Navbar Buttons --------------------------------------------------------------------------------- --}}

    {{#if session.isAuthenticated}}
      <div class="btn-group d-none d-md-flex ml-auto" role="group" aria-label="Go & Sign Out">
        <div class="btn-group">
          <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="js-navbar-go-dropdown"
                  data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="false">
            Go
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="js-navbar-go-dropdown">
            {{#link-to "protected.configuration.index" class="dropdown-item"}}
              Configuration
            {{/link-to}}
            <div class="dropdown-divider"></div>
            {{#link-to "protected.index" class="dropdown-item"}}
              Home
            {{/link-to}}
          </div>
        </div>
        <div class="btn-group">
          <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" id="js-navbar-me-dropdown"
                  data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="false">
            Me
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="js-navbar-me-dropdown">
            {{#link-to "protected.change-password" class="dropdown-item"}}
              Change Password
            {{/link-to}}
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="javascript:void(0);" onclick={{action "logout" session}}>
              Logout
            </a>
          </div>
        </div>
      </div>
    {{else}}
      <div class="btn-group d-none d-md-flex ml-auto" role="group" aria-label="Sign In & Sign Up">
        {{#link-to "sign-up" class="btn btn-outline-info btn-sm"}}
          Sign Up
        {{/link-to}}
        {{#link-to "login" class="btn btn-outline-primary btn-sm"}}
          Login
        {{/link-to}}
      </div>
    {{/if}}
  </div>
</nav>

{{outlet}}

{{ember-notify closeAfter=5000 messageStyle="bootstrap"}}
